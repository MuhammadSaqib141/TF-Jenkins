pipeline {
    agent any
    parameters {
        choice(name: 'TYPE', choices: ['Compute', 'Network', 'Storage'], description: 'Select the type')
    }
    stages {
        stage('Input') {
            steps {
                script {
                    echo "Selected TYPE: ${params.TYPE}"
                    
                    if (params.TYPE == 'Storage') {
                        needPassword = input message: 'Do you need to provide a password for Storage?', 
                            parameters: [choice(name: 'NEED_PASSWORD', choices: ['No', 'Yes'], description: 'Need password?')]

                        if (needPassword == 'Yes') {
                            password = input message: 'Please enter a password:', 
                                parameters: [password(name: 'STORAGE_PASSWORD', description: 'Password for Storage')]
                            echo "Password collected."
                        } else {
                            password = 'Not Required'
                            echo "Password not required."
                        }
                    } else {
                        password = 'Not Applicable'
                        echo "Password not applicable for ${params.TYPE}."
                    }
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo "Starting build process..."
                    echo "Selected TYPE: ${params.TYPE}"
                    echo "Password Status: ${password}"
                }
            }
        }
    }
}
